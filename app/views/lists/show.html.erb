<div class="background">

  <div class="banner">
    <div class="banner-title">
      <h1 class="neon"><%= @list.name %></h1>
    </div>
    <div class="deco">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </div>

  <div class="body">
    <div>
      <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#new_movie_modal">
        add a movie
      </button>
      <%= link_to "delete this list", list_path(@list), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this list?" } %>
      <%= link_to 'Back to lists', lists_path, class: "btn btn-secondary" %>
    </div>

    <div>
      <% @list.movies.each do |movie| %>
        <div class="film-card">
          <div class="card-content">
            <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
            <div class="movie-info">
              <div class="movie-title">
                <h2><%= movie.title %></h2>
                <h6><%= movie.rating %> stars</h6>
              </div>
              <div class="movie-overview">
                <p><%= movie.overview %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
